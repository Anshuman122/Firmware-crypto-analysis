FROM ubuntu:22.04
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    build-essential gcc g++ clang make cmake \
    gcc-arm-linux-gnueabi gcc-aarch64-linux-gnu gcc-mips-linux-gnu gcc-riscv64-linux-gnu \
    python3 python3-pip git wget curl && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY pyproject.toml /app/
RUN pip3 install --no-cache-dir pipx && pipx ensurepath || true
CMD ["bash"]

